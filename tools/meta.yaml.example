# OCI DevOps Agent Configuration
# ================================
# This file defines project/stage/region/realm to compartment_id mappings
# for OCI operations.
#
# Copy this file to meta.yaml and customize with your actual values:
#   cp meta.yaml.example meta.yaml
#
# Structure:
#   projects:
#     <project-name>:
#       <stage>:
#         <realm>:
#           <region>:
#             compartment_id: <ocid>
#
# Available Projects:
#   Define your project names here. Projects typically represent
#   applications or services deployed to OCI.
#
# Stages:
#   Common stages: dev, staging, prod
#   Use whatever stages match your deployment pipeline.
#
# Realms:
#   - oc1: Commercial/public cloud
#   - oc2: US Government FedRAMP High
#   - oc3: US Government DISA IL5
#   - oc4: UK Government
#   - oc8: Dedicated region
#   - oc9: Dedicated region
#   - oc10: Dedicated region
#   - oc14: Dedicated region
#   - oc16: Dedicated region (alloy)
#   - oc17: Dedicated region (alloy)
#   - oc19: EU Sovereign
#   - oc20: Dedicated region
#   - oc21: Dedicated region
#   - oc24: Dedicated region
#   - oc26: Dedicated region
#
# Regions:
#   Use OCI region identifiers (e.g., us-phoenix-1, us-ashburn-1, eu-frankfurt-1)

projects:
  # Example project: project-alpha
  # Replace with your actual project name
  project-alpha:
    dev:
      oc1:
        us-phoenix-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexampledev1
        us-ashburn-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexampledev2
    staging:
      oc1:
        us-phoenix-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexamplestaging1
        us-ashburn-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexamplestaging2
    prod:
      oc1:
        us-phoenix-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexampleprod1
        us-ashburn-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexampleprod2
        eu-frankfurt-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaaexampleprod3

  # Example project: project-beta
  # Replace with your actual project name
  project-beta:
    dev:
      oc1:
        us-phoenix-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaabetadev1
    staging:
      oc1:
        us-ashburn-1:
          compartment_id: ocid1.compartment.oc1..aaaaaaabetastaging1
    prod:
      # Example with a dedicated region (realm oc17)
      oc17:
        us-dcc-phoenix-1:
          compartment_id: ocid1.compartment.oc17..aaaaaaabetaprod1

  # Add more projects as needed:
  # my-service:
  #   dev:
  #     oc1:
  #       us-phoenix-1:
  #         compartment_id: ocid1.compartment.oc1..your-compartment-id
